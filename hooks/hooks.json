{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__chroma__*",
        "hooks": [
          {
            "type": "command",
            "command": "python3",
            "args": ["hooks/validate-chroma-path.py"],
            "description": "Validate ChromaDB path before MCP operations"
          }
        ]
      }
    ],
    "PostToolUse": []
  }
}
